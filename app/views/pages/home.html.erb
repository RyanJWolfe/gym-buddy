<div class="space-y-4">
  <h1 class="text-4xl font-bold">Welcome</h1>

  <% if current_user %>
    <span>Logged in as </span><%= link_to render_username(current_user), profile_path(current_user), class: "link link-blue" %>
    <div>
      <%= link_to 'New Workout', new_workout_path, class: 'btn btn-primary' %>
    </div>
    <%= link_to 'Routines', routines_path, class: 'link link-muted' %>
  <% else %>
    <%= link_to 'Login', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
  <% end %>
</div>