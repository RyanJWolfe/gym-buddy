<div class="space-y-6">
  <h1 class="text-4xl font-bold">Welcome</h1>

  <% if current_user %>
    <p>Logged in as @<%= current_user.username %></p>

    <p>People I'm following</p>
    <% current_user.followees.each do |u| %>
      <%= link_to u.email, profile_path(u.id) %>
    <% end %>

    <p>People following me</p>
    <% current_user.followers.each do |u| %>
      <%= link_to u.email, profile_path(u.id) %>
    <% end %>

    <%= link_to 'Edit Account', edit_user_registration_path, class: 'btn btn-primary' %>
    <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-tertiary' %>
  <% else %>
    <%= link_to 'Login', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
  <% end %>
</div>